import java.util.Scanner;
public class MenuProgram {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
                System.out.println("Welcome to the Menu-Based Program:");
                System.out.println();

        int choice; do {
            System.out.println("\n" +"Please select an option: ");
            System.out.println("1. Print pattern");
            System.out.println("2. Rotate Array ");
            System.out.println("3. Help ");
            System.out.println("4. Exit ");
                 System.out.print("Option:  ");

            choice = scanner.nextInt();
            switch (choice) {
                case 1:
                    printPattern();

                    break;
                    case 2:
                   rotateArray();
                        break;
                        case 3:
                     displayHelp();
                        break;
                        case 4:
                            System.out.println("Exiting the program. Goodbye!");
                            break;
                            default:
                            System.out.println("Invalid choice. Please select an option :"); } }
                    while (choice != 4);
                    scanner.close();
       
    }
   
     public static void printPattern() {
        Scanner scanner = new Scanner(System.in);

        try {
            System.out.print("Enter the number of rows for the pattren: ");
            int n = scanner.nextInt();
            if (n <= 0) {
                System.out.println("Please enter a positive number.");
                return;
            }
             System.out.println("Output:"+ "\2n");

            for (int i = n; i >= 1; i--) {
                for (int j = 1; j <= i; j++) {
                    System.out.print("* ");
                }
                System.out.println();
            }
        } catch (java.util.InputMismatchException e) {
            System.out.println("Invalid input. Please enter a positive number.");
        }
    }

    public static void rotateArray() {
        Scanner scanner = new Scanner(System.in);

        try {
            System.out.print("Enter the number of elements (n): ");
            int n = scanner.nextInt();
            System.out.print("Enter the number of steps (k): ");
            int k = scanner.nextInt();

            if (n <= 0 || k < 0) {
                System.out.println("Please enter valid values for n and k.");
                return;
            }

            int[] array = new int[n];
           System.out.print("Enter the array elements seperated by spaces: ");
            for (int i = 0; i < n; i++) {
                 array[i] = scanner.nextInt();
            }

            k = k % n;
            int[] rotatedArray = new int[n];
            for (int i = 0; i < n; i++) {
                rotatedArray[(i + k) % n] = array[i];
            }

            System.out.print("Output: [");
            for (int i = 0; i < n; i++) {
                System.out.print(rotatedArray[i]);
                if (i < n - 1) {
                    System.out.print(", ");
                }
            }
            System.out.println("]");
        } catch (java.util.InputMismatchException e) {
            System.out.println("Invalid input. Please enter valid numbers.");
        }
    }

    public static void displayHelp() {
        System.out.println("--- Help ---");
        System.out.println("Option 1: Print a pattern with 'n' rows of decreasing asterisks.");
        System.out.println("Option 2: Rotate an array of 'n' elemnts to the right by 'k' steps.");
        System.out.println("Option 3: Display the help message.");
        System.out.println("Option 4: Exit the program.");
        System.out.println("\nTo select an option, enter the corresponding number.");
    }
}
